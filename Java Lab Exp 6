import java.util.Scanner;
abstract class Device {
    int id;
    String brand;
    double price;

    Device(int id, String brand, double price) {
        this.id = id;
        this.brand = brand;
        this.price = price;
    }

  abstract void displayDetails();
}
interface Discountable {
    void applyDiscount(double percent);
    double finalPrice();
}
class Smartphone extends Device implements Discountable {
    double discounted;

    Smartphone(int id, String brand, double price) {
        super(id, brand, price);
        discounted = price;
    }
    public void applyDiscount(double percent) {
        discounted = price - (price * percent / 100);
    }
    public double finalPrice() {
        return discounted;
    }
    void displayDetails() {
        System.out.println("Id: " + id);
        System.out.println("Brand: " + brand);
        System.out.println("Price: " + price);
        System.out.println("After Discount: " + discounted);
    }
}
public class calc {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        Smartphone phone = null;
        int ch;

        do {
            System.out.println("\n1. Add Smartphone");
            System.out.println("2. Apply Discount");
            System.out.println("3. View Device");
            System.out.println("4. Exit");
            System.out.print("Enter your choice: ");
            ch = sc.nextInt();

            switch (ch) {
                case 1:
                    System.out.print("Enter Id: ");
                    int id = sc.nextInt();
                    sc.nextLine();
                    System.out.print("Enter Brand: ");
                    String b = sc.nextLine();
                    System.out.print("Enter Price: ");
                    double p = sc.nextDouble();
                    phone = new Smartphone(id, b, p);
                    break;

                case 2:
                    if (phone != null) {
                        System.out.print("Enter Discount %: ");
                        double per = sc.nextDouble();
                        phone.applyDiscount(per);
                        System.out.println("Discount Applied!");
                    } else {
                        System.out.println("Please add a smartphone first!");
                    }
                    break;

                case 3:
                    if (phone != null)
                        phone.displayDetails();
                    else
                        System.out.println("No smartphone added yet!");
                    break;

                case 4:
                    System.out.println("Exiting...");
                    break;

                default:
                    System.out.println("Invalid choice!");
            }
        } while (ch != 4);

        sc.close();
    }
}
